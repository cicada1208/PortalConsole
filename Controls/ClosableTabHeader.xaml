<UserControl x:Class="Controls.ClosableTabHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Controls"
             mc:Ignorable="d" 
             d:DesignHeight="23" d:DesignWidth="80" Margin="0"  >
    <StackPanel Orientation="Horizontal">
        <Label Name="TitleLabel" Content="TabItem" 
               Margin="0,0,0,0" FontSize="12" />
        <Button Name="CloseButton" Content="X"
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" ToolTip="Close" 
                Width="15" Margin="0,2,0,0" Padding="0" Visibility="Hidden" 
                FontSize="12" FontFamily="Courier" FontWeight="Bold" FontStretch="Normal"/>
    </StackPanel>
</UserControl>
